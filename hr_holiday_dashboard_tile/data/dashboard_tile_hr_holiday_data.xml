        <field name="name">All HR Leave Allocation Request: Draft</field>
        <field name="sequence">32</field>
        <field name="domain">
        [
            ("type", "=", "add"),
            ("state", "=", "draft"),
        ]
        </field>
        <field name="model_id" search="[('model','=','hr.holidays')]"/>
