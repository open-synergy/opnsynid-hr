<openerp>
    <data>
<record id="hr_overtime_request_type_view_tree" model="ir.ui.view">
    <field name="name">hr.overtime_request_type tree</field>
    <field name="model">hr.overtime_request_type</field>
    <field name="arch" type="xml">
        <tree>
            <field name="name" />
            <field name="code" />
        </tree>
    </field>
</record>

<record id="hr_overtime_request_type_view_form" model="ir.ui.view">
    <field name="name">hr.overtime_request_type form</field>
    <field name="model">hr.overtime_request_type</field>
    <field name="arch" type="xml">
        <form>
            <header>
            </header>
            <group name="header_1" colspan="4" col="2">
                <field name="name" />
                <field name="code" />
                <field name="active" />
            </group>
            <notebook>
                <page name="note" string="Note">
                    <field name="note" />
                </page>
            </notebook>
        </form>
    </field>
</record>

<record id="hr_overtime_request_type_view_search" model="ir.ui.view">
    <field name="name">hr.overtime_request_type search</field>
    <field name="model">hr.overtime_request_type</field>
    <field name="arch" type="xml">
        <search>
            <field name="name" />
            <field name="code" />
        </search>
    </field>
</record>

<record id="hr_overtime_request_type_action" model="ir.actions.act_window">
    <field name="name">Overtime Request Types</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">hr.overtime_request_type</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
    <field name="search_view_id" ref="hr_overtime_request_type_view_search" />
</record>

<menuitem
            id="hr_overtime_request_type_type_menu"
            name="Types"
            parent="hr_overtime_configuration_menu"
            action="hr_overtime_request_type_action"
            sequence="1"
        />
    </data>
</openerp>
