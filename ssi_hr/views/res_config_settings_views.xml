        action="res_config_settings_action"
    />

<record id="hr_settings_view_form" model="ir.ui.view">
    <field name="name">res.config.settings form - Human Resource</field>
    <field name="model">res.config.settings</field>
    <field name="priority" eval="100" />
    <field name="arch" type="xml">
        <form
                string="Settings"
                class="oe_form_configuration o_base_settings"
                js_class="base_settings"
            >
            <div class="o_control_panel">
                <div class="o_panel">
                    <div
                            class="title h2 mb0 mt4 text-muted d-none d-md-block"
                        >Human Resource</div>
                    <div class="o_setting_search">
                        <input
                                type="text"
                                class="searchInput"
                                placeholder="Search..."
                            />
                        <span class="searchIcon"><i
                                    class="fa fa-search"
                                    role="img"
                                    aria-label="Search"
                                    title="Search"
                                /></span>
                    </div>
                </div>
                <header>
                    <button
                            string="Save"
                            type="object"
                            name="execute"
                            class="oe_highlight"
                        />
                    <button
                            string="Discard"
                            type="object"
                            name="cancel"
                            special="cancel"
                        />
                </header>
            </div>
            <div class="o_setting_container">
                <div class="settings_tab" />
                <div class="settings">
                    <div class="notFound o_hidden">No Record Found</div>
                </div>
            </div>
        </form>
    </field>
</record>

<record id="hr_settings_action" model="ir.actions.act_window">
    <field name="name">Human Resource Settings</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">res.config.settings</field>
    <field name="view_mode">form</field>
    <field name="view_id" ref="hr_settings_view_form" />
    <field name="target">inline</field>
    <field name="context">{'module' : 'ssi_hr', 'bin_size': False}</field>
</record>

<menuitem
        id="hr_settings_menu"
        name="Human Resource"
        parent="base_setup.menu_config"
        action="hr_settings_action"
        sequence="100"
    />

<record id="hr.res_config_settings_view_form" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.inherit.hr</field>
    <field name="model">res.config.settings</field>
    <field name="priority" eval="70" />
    <field name="inherit_id" ref="base.res_config_settings_view_form" />
    <field name="groups_id" eval="[(6, 0, [ref('original_employee_group')])]" />
</record>
