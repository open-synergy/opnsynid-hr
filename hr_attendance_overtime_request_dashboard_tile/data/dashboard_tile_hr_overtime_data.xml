        <field name="name">All HR Overtime Request: Waiting For Approval</field>
        <field name="sequence">33</field>
        <field name="domain">
        [
            ("state", "=", "confirm"),
        ]
        </field>
        <field name="model_id" search="[('model','=','hr.overtime_request')]"/>
        <field name="action_id" ref="hr_attendance_overtime_request.hr_overtime_request_action" />
        <field name="primary_function">count</field>
        <field name="background_color">#776D8A</field>
    </record>
