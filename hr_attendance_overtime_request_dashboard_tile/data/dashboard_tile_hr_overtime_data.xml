        <field name="name">All HR Overtime Request: Draft</field>
        <field name="sequence">33</field>
        <field name="domain">
        [
            ("state", "=", "draft"),
        ]
        </field>
        <field name="model_id" search="[('model','=','hr.overtime_request')]"/>
