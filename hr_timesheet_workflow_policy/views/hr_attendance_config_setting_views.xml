<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>
        <record id="hr_attendance_config_setting_view_form" model="ir.ui.view">
            <field name="name">Inherit Config Timesheet Form</field>
            <field name="model">hr.attendance_config_setting</field>
            <field
                name="inherit_id"
                ref="hr_attendance_configuration_page.hr_attendance_config_setting_view_form"
            />
            <field name="arch" type="xml">
                <xpath expr="//group[@name='general_configuration']" position="after">
                    <separator string="Timesheet" />
                    <group name="timesheet_group">
                        <label for="id" string="Allowed Groups" />
                        <div>
                            <div>
                                <label
                                    for="id"
                                    string="To Submit to Manager"
                                    class="oe_inline"
                                />
                                <field
                                    name="timesheet_submit_grp_ids"
                                    widget="many2many_tags"
                                    class="oe_inline"
                                />
                            </div>
                            <div>
                                <label for="id" string="To Approve" class="oe_inline" />
                                <field
                                    name="timesheet_approve_grp_ids"
                                    widget="many2many_tags"
                                    class="oe_inline"
                                />
                            </div>
                            <div>
                                <label for="id" string="To Refuse" class="oe_inline" />
                                <field
                                    name="timesheet_refuse_grp_ids"
                                    widget="many2many_tags"
                                    class="oe_inline"
                                />
                            </div>
                            <div>
                                <label
                                    for="id"
                                    string="To Set to Draft"
                                    class="oe_inline"
                                />
                                <field
                                    name="timesheet_set2draft_grp_ids"
                                    widget="many2many_tags"
                                    class="oe_inline"
                                />
                            </div>
                        </div>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
