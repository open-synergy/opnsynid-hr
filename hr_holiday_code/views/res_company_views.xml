<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>
        <record id="res_company_view_form" model="ir.ui.view">
            <field name="name">res.company form - Hr Holiday Code</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form" />
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page name="hr_holidays_code" string="Hr Holidays Sequence">
                        <group name="group_seq_holiday" colspan="4" col="2">
                            <field name="leave_request_sequence_id" />
                            <field name="allocation_request_sequence_id" />
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
