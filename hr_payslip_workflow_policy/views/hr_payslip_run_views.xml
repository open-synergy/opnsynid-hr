<openerp>
    <data>
        <record id="hr_payslip_run_view_form" model="ir.ui.view">
            <field name="name">hr.payslip.run.form</field>
            <field name="model">hr.payslip.run</field>
            <field name="inherit_id" ref="hr_payroll.hr_payslip_run_form" />
            <field name="arch" type="xml">
                <data>
                    <xpath
                        expr="//button[@name='close_payslip_run']"
                        position="attributes"
                    >
                        <attribute name="states" />
                        <attribute name="groups" />
                        <attribute
                            name="attrs"
                        >{'invisible':['|',('state','!=','draft'),('close_ok','=',False)]}</attribute>
                    </xpath>
                    <xpath
                        expr="//button[@name='%(hr_payroll.action_hr_payslip_by_employees)d']"
                        position="attributes"
                    >
                        <attribute name="states" />
                        <attribute name="groups" />
                        <attribute
                            name="attrs"
                        >{'invisible':['|',('state','!=','draft'),('generate_ok','=',False)]}</attribute>
                    </xpath>
                    <xpath
                        expr="//button[@name='draft_payslip_run']"
                        position="attributes"
                    >
                        <attribute name="states" />
                        <attribute name="groups" />
                        <attribute
                            name="attrs"
                        >{'invisible':['|',('state','!=','close'),('set2draft_ok','=',False)]}</attribute>
                    </xpath>
                    <xpath expr="//field[@name='slip_ids']" position="after">
                        <separator string="Policy" groups="base.group_system" />
                        <group
                            name="policy"
                            colspan="4"
                            col="2"
                            groups="base.group_system"
                        >
                            <field name="close_ok" />
                            <field name="generate_ok" />
                            <field name="set2draft_ok" />
                        </group>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</openerp>
