<openerp>
<data>

<record id="account_analytic_account_view_tree" model="ir.ui.view">
    <field name="name">account.analytic.account form</field>
    <field name="model">account.analytic.account</field>
    <field
                name="inherit_id"
                ref="hr_timesheet.account_analytic_account_timesheet_form"
            />
    <field name="arch" type="xml">
        <data>
            <xpath expr="//notebook" position="inside">
                <page
                            name="timesheet_product_policy"
                            string="Timesheet Product Policy"
                            attrs="{'invisible':[('use_timesheets','=',False)]}"
                        >
                    <group
                                name="timesheet_product_policy_1"
                                string="Allowed Product Categories"
                                colspan="4"
                                col="2"
                            >
                        <field
                                    name="timesheet_account_allowed_product_categ_ids"
                                    nolabel="1"
                                    colspan="2"
                                />
                    </group>
                    <group
                                name="timesheet_product_policy_2"
                                string="Allowed Products"
                                colspan="4"
                                col="2"
                            >
                        <field
                                    name="timesheet_account_allowed_product_ids"
                                    nolabel="1"
                                    colspan="2"
                                />
                    </group>
                </page>
            </xpath>
        </data>
    </field>
</record>


</data>
</openerp>
